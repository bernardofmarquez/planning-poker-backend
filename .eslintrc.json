{
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/prefer-default-export": 0,
    "max-len": [
      "error",
      {
        "code": 200
      }
    ],
    "@typescript-eslint/semi": [
      "error",
      "never"
    ],
    "no-plusplus": 0,
    "@typescript-eslint/no-use-before-define": "off",
    "no-param-reassign": 0,
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "ignorePatterns": [
    "build"
  ]
}